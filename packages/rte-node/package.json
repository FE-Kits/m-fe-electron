{
  "name": "rte-node",
  "version": "0.0.1",
  "description": "Pre-configured boilerplate for Electron + React + TypeScript",
  "main": "./build/index.js",
  "scripts": {
    "start": "electron ./build/index.js",
    "dev": "rimraf build && cross-env NODE_ENV=development webpack ./scripts/webapck/webpack.config.js --watch --progress --colors",
    "prod": "rimraf build && cross-env NODE_ENV=production webpack ./scripts/webapck/webpack.config.js --progress --colors -p",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register \"test/**/*.ts\"",
    "build:win": "electron-builder build --win --x64",
    "build:mac": "electron-builder build --mac --x64"
  },
  "build": {
    "appId": "com.devtography.electron_boilerplate",
    "productName": "Electron+React+TypeScript Boilerplate",
    "directories": {
      "app": "./build/",
      "output": "./out/"
    },
    "mac": {
      "target": "pkg"
    },
    "win": {
      "target": "nsis",
      "asar": false
    },
    "buildVersion": "1.0.0"
  },
  "author": "wx-chevalier@github",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@wx-fc/app-config": "^0.3.7",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "stylelint": "^13.2.1",
    "tslint": "^6.0.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "electron": "^8.1.1",
    "electron-builder": "^22.4.0",
    "acorn": "^7.1.1",
    "ajv": "^6.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Devtography/electron-react-typescript-webpack-boilerplate"
  },
  "keywords": [
    "boilerplate",
    "Electron",
    "React",
    "Typescript",
    "Webpack"
  ],
  "bugs": {
    "url": "https://github.com/Devtography/electron-react-typescript-webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/Devtography/electron-react-typescript-webpack-boilerplate#readme"
}
